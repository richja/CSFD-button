{
	"manifest_version": 2,
	"name": "Titulky plus",
	"version": "0.93",
	"minimum_chrome_version": "40",

	"description": "Vylepšení webu titulky.com pro pohodlnější práci (nejen pro překladatele).",
	"author": "Jan Richter, Igor Zdražil",
	"short_name": "Titulky+",

	"permissions": [
		"tabs",
		"activeTab",
		"storage",
		"*://*.omdbapi.com/*",
		"*://*.titulky.com/*"
	],

	"icons": {
		"16" : "images/icon16.png",
		"48" : "images/icon48.png",
		"128": "images/icon128.png"
	},

	"content_scripts": [ {
		"css": [ "css/cstyle.css" ],
		"js": [ "js/jquery.min.js", "js/pusher.min.js", "js/autolinker.min.js", "js/content.js" ],
		"matches": [ "*://*.titulky.com/*" ]
	} ],

	"options_ui": {
		"page": "pages/options.html"
	},

	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"16" : "images/icon16.png",
			"48" : "images/icon48.png",
			"128": "images/icon128.png"
		},
		"default_title": "Titulky Plus",
		"default_popup": "pages/popup.html"
	},

	"web_accessible_resources": [
		"images/*.png",
		"images/*.jpg"
	]
}
